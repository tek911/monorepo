<?xml version="1.0" encoding="UTF-8"?>
<!-- Log4j2 Configuration -->
<!-- VULNERABILITY: Using vulnerable Log4j 2.14.1 -->
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- VULNERABILITY: Log file with sensitive data -->
        <File name="File" fileName="logs/auth-service.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- VULNERABILITY: Debug logging enabled -->
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- VULNERABILITY: Detailed logging for security-sensitive packages -->
        <Logger name="com.vulnmonolith.auth" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <Logger name="org.springframework.security" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
